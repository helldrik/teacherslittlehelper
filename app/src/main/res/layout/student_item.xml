<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@drawable/student_item_drawable"
        android:elevation="8dp"
        android:padding="10dp">

        <TextView
            android:text="@string/newStudentName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/titleInListItem"/>
            <TextView
                android:id="@+id/studentListItem_name"
                style="@style/content"
                android:text="Student Name"/>
        <TextView
            android:text="@string/newStudentEmail"
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/titleInListItem"/>
            <TextView
                android:id="@+id/studentListItem_email"
                style="@style/content"
                android:textStyle="bold"
                android:text="Email"/>
        <TextView
            android:text="@string/newStudentPhone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            style="@style/titleInListItem"/>
            <TextView
                android:id="@+id/studentListItem_phone"
                style="@style/content"
                android:textStyle="bold"
                android:text="Phone"/>

    </LinearLayout>

</LinearLayout>
