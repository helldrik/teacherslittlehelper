<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dayListItem"
    android:layout_width="120dp" android:layout_height="105dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:clipToPadding="false"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="110dp"
    android:layout_height="100dp"
    android:background="@drawable/student_item_drawable"
    android:elevation="8dp"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:orientation="vertical"
    >
    <TextView android:id="@+id/classTitle" android:text="@string/hello_world" style="@style/content"/>
    <TextView android:id="@+id/classStartTime" android:text="@string/hello_world" style="@style/content"/>
    <TextView  android:text="-" style="@style/content"/>
    <TextView android:id="@+id/classEndTime" android:text="@string/hello_world" style="@style/content"/>
</LinearLayout>

</LinearLayout>
